{
  "scripts": {
    "build": "npm install && npm run build:css",
    "build:css": "npx tailwind build -i ./wwwroot/css/app.css -o ./wwwroot/css/app.min.css --minify --watch",
    "run:build:infinity": "powershell -c while($true) { npm run build }"
  },
  "dependencies": {
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.3"
  }
}
